@model Usuario

<div class="container text-center">
    <div style="display: flex; align-items: center; justify-content: center;">
        <h1 style="margin-right: 10px;">Reservar Cita</h1>
        <a asp-controller="CentroMedicoClient" asp-action="PacientePrincipal"><img src="~/images/iconoflecha.png" style="width:40px;height:40px;"></a>
    </div>
    <br />
    <hr />
    <br />
    <div style="width:60%;margin:auto">
        <form method="post">
            <label>Nombre Paciente: </label>
            <input type="text" name="paciente" class="form-control" placeholder="@Model.Nombre" />

            <input type="text" name="idpaciente" class="form-control" value="@Model.Id" hidden />
            
            <label>Nombre Medico: </label>
            <input type="text" name="medico" class="form-control" placeholder="@ViewData["NOMBREMEDICO"]" />
            
            <input type="text" name="idmedico" class="form-control" value="@TempData["IDMEDICO"]" hidden />
            
            <label>Seleccione Fecha: </label>
            <input type="date" class="form-control" name="fecha" />
            
            <label>Seleccione Hora: </label>
            <input type="time" name="hora" class="form-control" />
            
            <br />
            <button class="btn btn-outline-success">
                Pulsar
            </button>
        </form>

        <h2 style="color:rebeccapurple">
            @ViewData["MENSAJE"]
            @ViewData["OTROMENSAJE"]
        </h2>
    </div>
</div>