@model IEnumerable<ApiCentroMedicoClient.Models.PeticionesMedicamentoDetallado>

@{
    ViewData["Title"] = "AdministradorListaPeticionesMedicamentos";
}

<div>
    <div style="display: flex; align-items: center; justify-content: center;">
        <h1 style="margin-right: 10px;">Lista Peticicones Medicamentos</h1>
        <a asp-controller="CentroMedicoClient" asp-action="AdministradorPrincipal"><img src="~/images/iconoflecha.png" style="width:40px;height:40px;"></a>
    </div>
    <br />
    <hr />
    <br />
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (PeticionesMedicamentoDetallado petis in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="~/images/iconomedis.png" style="width:80px;height80px;margin:auto" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@petis.NombreMedicamento</h5>
                        <p class="card-text">
                            Medico <b>@petis.NombreMedico @petis.ApellidoMedico</b> con ID: <b>@petis.IdMedico_Solicitante</b> quiere dar de <b>@petis.Estado</b> el medicamento <b>@petis.NombreMedicamento @petis.PetisMedicamentoNombre</b> 
                        </p>
                    </div>
                    <div class="card-footer" style="margin:auto">
                        <a asp-controller="CentroMedicoClient" asp-action="AdministradorAceptarMedicamento"
                           asp-route-idpeticion="@petis.IdPeticion"
                           asp-route-idmedicamento="@petis.IdMedicamento" 
                           asp-route-nombre="@petis.NombreMedicamento@petis.PetisMedicamentoNombre"
                           asp-route-descripcion="@petis.PetisMedicamentoDesc" 
                           asp-route-estado="@petis.PetisMedicamentoEstado"
                           class="btn btn-success">Aceptar
                       </a>
                        <a asp-controller="CentroMedicoClient" asp-action="AdministradorEliminarPeticionMedicamento"
                           asp-route-idpeticion="@petis.IdPeticion"
                           class="btn btn-warning">Denegar
                       </a>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
