@model IEnumerable<ApiCentroMedicoClient.Models.CitaDetallado>

@{
    ViewData["Title"] = "GetListaCitas";
}

<div class="container text-center">
    <div style="display: flex; align-items: center; justify-content: center;">
        <h1 style="margin-right: 10px;">Lista Citas</h1>
        <a asp-controller="CentroMedicoClient" asp-action="AdministradorPrincipal"><img src="~/images/iconoflecha.png" style="width:40px;height:40px;"></a>
    </div>
    <br />
    <hr />
    <br />
    <div>
        <h2>Filtros</h2>
        <form method="post">
            <label>Selecciona Fecha Desde</label>
            <input type="date" name="fecha" class="form-control"/>
            <label>Selecciona Fecha Hasta</label>
            <input type="date" name="fechahasta" class="form-control"/>
            <br />
            <button class="btn btn-outline-success">
                Buscar
            </button>
        </form>
    </div>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hora)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SeguimientoCita)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Medico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comentario)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hora)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SeguimientoCita)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Medico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comentario)
                    </td>
                    <td>
                        <a asp-controller="CentroMedicoClient" asp-action="AdministradorFindCita" asp-route-idcita="@item.Id" class="btn btn-outline-info">Informacion</a>
                        <a asp-controller="CentroMedicoClient" asp-action="AdministradorDeleteCita" asp-route-idcita="@item.Id" class="btn btn-outline-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

