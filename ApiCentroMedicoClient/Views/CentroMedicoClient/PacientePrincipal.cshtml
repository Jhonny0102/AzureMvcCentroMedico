<h1 style="text-align:center">Bienvenido @ViewData["NOMBREUSUARIO"]</h1>
<br />
<div class="container text-center">
    <a asp-controller="CentroMedicoClient" asp-action="PacienteMedicoInformacion" class="text-info">¿Quien es mi médico?</a>
</div>
<hr />
<br />
<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="card h-100">
            <img src="~/images/rueda.png" style="width:300px;height:300px" alt="...">
            <div class="card-body">
                <h5 class="card-title">Perfil</h5>
                <p class="card-text">Permite ver la informacion de tu perfil o si quieres poder editarla.</p>
                <div class="card-footer">
                    <a asp-controller="CentroMedicoClient" asp-action="PacientePerfil" class="btn btn-outline-success">Acceder</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100">
            <img src="~/images/rueda.png" style="width:300px;height:300px" alt="...">
            <div class="card-body">
                <h5 class="card-title">Reservar Cita</h5>
                <p class="card-text">Permite reservar citas con tu médico.</p>
                <div class="card-footer">
                    <a asp-controller="CentroMedicoClient" asp-action="PacienteCreateCita" class="btn btn-outline-success">Acceder</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100">
            <img src="~/images/rueda.png" style="width:300px;height:300px" alt="...">
            <div class="card-body">
                <h5 class="card-title">Historial Citas</h5>
                <p class="card-text">Permite visualizar todas tus citas pudiendo filtrar por fechas e incluso ver los detalles de tus citas.</p>
                <div class="card-footer">
                    <a asp-controller="CentroMedicoClient" asp-action="PacienteCitasPaciente" class="btn btn-outline-success">Acceder</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100">
            <img src="~/images/rueda.png" style="width:300px;height:300px" alt="...">
            <div class="card-body">
                <h5 class="card-title">Medicamentos</h5>
                <p class="card-text">Permite ver todos tus medicamentos asignados , ademas puedes retirarlos cuando lo necesites.</p>
                <div class="card-footer">
                    <a asp-controller="CentroMedicoClient" asp-action="PacienteMedicamentos" class="btn btn-outline-success">Acceder</a>
                </div>
            </div>
        </div>
    </div>
</div>